# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go,Makefile]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.{sh,bats,yaml,yml,md}]
indent_style = space
indent_size = 2
max_line_length = 120
